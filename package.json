{
  "name": "nextBeast",
  "version": "1.0.0",
  "description": "Automation testing framework",
  "main": "",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest --config ./config/jest.config.js --forceExit --detectOpenHandles",
    "update-snapshot": "node --experimental-vm-modules node_modules/.bin/jest --config ./config/jest.config.js --forceExit --detectOpenHandles -u",
    "playwrightExample": "npx playwright test --config=config/playwright.config.js tests/visualPlaywrightExample.test.js",
    "jestPlaywrightExample": "driverType=playwright npm test tests/visualJestPlaywrightExample.test.js",
    "jestWebdriverIOExample": "driverType=webdriverio npm test tests/visualJestWebdriverIOExample.test.js",
    "report": "allure generate allure-results --clean -o allure-report && allure open allure-report"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@playwright/test": "*",
    "allure-commandline": "*",
    "allure-jest": "*",
    "axios": "*",
    "chai": "*",
    "cheerio": "*",
    "csv-parse": "*",
    "csv-stringify": "*",
    "jest": "*",
    "jest-environment-node": "*",
    "jest-image-snapshot": "*",
    "pg": "*",
    "playwright": "*",
    "properties-reader": "*",
    "webdriverio": "*"
  }
}
